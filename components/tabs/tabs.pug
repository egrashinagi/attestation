md-tabs(md-dynamic-height md-border-bottom)
    md-tab(label="Главное")
        md-content.md-padding.main
            span.main__title Текст задания:
            input(type="text" size="170" value="Указатель с наименованием какого города расположен на лобовом стекле автобуса в центре изображения?")
            span.main__title Расположение:
            input(type="text" size="170" value="Дорожное хозяйство")
            span.main-assessmentmain.main__title Оценивание
                md-radio-group.main-assessmentmain__list(ng-model="data.group1")
                    md-radio-button.md-primary.main-assessmentmain__list-item(value="answer1") Все или ничего
                    md-radio-button.main-assessmentmain__list-item(value="answer2") Суммирование ответов
                    md-radio-button.main-assessmentmain__list-item(value="answer3") По шкалам
                    md-radio-button.main-assessmentmain__list-item(value="answer4") Без оценки

            md-list
                    p.md-title.main__title Список возможных ответов
                    p.md-subhead Текст ответа
                    md-button.md-secondary Уфа
                    md-button.md-secondary Москва
                    md-button.md-secondary Казань
                    md-button.md-secondary Актобе
                    md-button.md-secondary Ижевск
                    md-chips

                        md-chip Уфа
                            md-icon close

                        md-chip Москва
                            md-icon close

                        md-chip Казань
                            md-icon close
                        md-chip Актобе
                            md-icon close
                        md-chip Ижевск
                            md-icon close
        md-button.md-primary.md-raised Отменить
        md-button.md-raised Сохранить

    md-tab(label="Дополнительно")
        span.md-subhead Тип отметки
            p
                md-radio-group.main-assessmentmain__list_type(ng-model="data.group1")
                    md-radio-button.md-primary.main-assessmentmain__list-item(value="answer1") Флаг
                    md-radio-button.main-assessmentmain__list-item(value="answer2") Кружок

        span.md-subhead Изображение
            p
                input(type='file' value="upload")

        md-button.md-raised Отменить
        md-button.md-primary Сохранить