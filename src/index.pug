include components/header/header

doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no")

        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
        link(rel='stylesheet' href='styles.css')

    body(ng-app='MyApp', ng-controller="indexController")
        +header('Главная страница')

        md-list
            md-subheader.md-no-sticky Доступные страницы

            md-list-item.md-3-line(ng-click="open('questions.html')")
                h4 Список вопросов

            md-list-item.md-3-line(ng-click="open('dialog.html')")
                h4 Задание на выбор ответа

            md-list-item.md-3-line(ng-click="open('scale.html')")
                h4 Шкалы

            md-list-item.md-3-line(ng-click="open('scale-edit.html')")
                h4 Шкалы - диалог редактирования


            md-list-item.md-3-line(ng-click="open('attestation.html')")
                h4 Аттестационные билеты

        script(src="vendor.js")
        script(src="index.js")