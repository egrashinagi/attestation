.page-container
    md-input-container
        input(placeholder='Наименование', value='5-я шкала оценивания')

    md-input-container
        input(placeholder='Описание', value='5-я шкала оценивания. Подробное описание задания.')

    table.my-table
        caption Оценивание:

        thead
            tr(md-colors={background: 'primary-300'})
                th Наименование
                th Значение
                th Нижняя граница, %
                th Тест пройден
                th Действия

        tbody
            tr
                td.left Очень плохо
                td 0
                td 0
                td
                    md-checkbox
                td
                    md-button.md-icon-button
                        i.material-icons delete_forever

            tr
                td.left Плохо
                td 20
                td 20
                td
                    md-checkbox
                td
                    md-button.md-icon-button
                        i.material-icons delete_forever

            tr
                td.left Удовлетворительно
                td 40
                td 40
                td
                    md-checkbox
                td
                    md-button.md-icon-button
                        i.material-icons delete_forever

            tr
                td.left Хорошо
                td 60
                td 60
                td
                    md-checkbox
                td
                    md-button.md-icon-button
                        i.material-icons delete_forever

            tr
                td.left Отлично
                td 80
                td 80
                td
                    md-checkbox
                td
                    md-button.md-icon-button
                        i.material-icons delete_forever

            tr(md-colors={background: 'primary-100'})
                td.left
                    md-input-container
                        input(placeholder='Наименование')
                td
                    md-input-container
                        input(placeholder='Значение')
                td
                    md-select(ng-model="size")
                        md-option 0
                        md-option 10
                        md-option 20
                        md-option 30
                        md-option 40
                        md-option 50
                        md-option 60
                        md-option 70
                        md-option 80
                        md-option 90
                        md-option 100

                td
                    md-checkbox
                td
                    md-button.md-fab.md-mini
                        md-icon add
    .scale-edit-list__actions
        md-button.md-raised.md-warn(ng-click="showListBottomSheet()") Отменить
        md-button.md-raised.md-primary(ng-click="showListBottomSheet()") Сохранить